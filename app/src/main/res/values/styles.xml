<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTeal</item>
        <item name="colorPrimaryDark">@color/colorTealDarker</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolTipLayout">
        <item name="ttlm_padding">25dip</item>
        <item name="ttlm_strokeColor">@null</item>
        <item name="ttlm_backgroundColor">@color/colorAccent</item>
        <item name="ttlm_strokeWeight">2dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="card_gray">#DEDEDE</color>
    <drawable name="actionbar_bacgkround">#ff4444</drawable>

</resources>
